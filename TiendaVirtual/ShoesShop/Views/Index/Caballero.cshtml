
@{
    Layout = null;
}
@model IEnumerable<ShoesShop.Models.Products>

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Grey´s Shoes</title>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Mukta:300,400,700">
    <link rel="stylesheet" href="~/Content/Index/bootstrap/style.css">

    <link rel="stylesheet" href="~/Content/Index/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/Index/magnific-popup.css">
    <link rel="stylesheet" href="~/Content/Index/jquery-ui.css">
    <link rel="stylesheet" href="~/Content/Index/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Content/Index/owl.theme.default.min.css">


    <link rel="stylesheet" href="~/Content/Index/aos.css">

    <link rel="stylesheet" href="~/Content/Index/style.css">

    <link href="~/Content/Novedades/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

</head>

<body>

    <div class="site-wrap">

        <header class="site-navbar" role="banner">

            <div class="site-navbar-top">

                <div class="container">

                    <div class="row align-items-center">

                        <div class="col-6 col-md-4 order-2 order-md-1 site-search-icon text-left">
                            <form action="" class="site-block-top-search">
                                <i class="icon fas fa-search"></i>
                                <input type="text" class="form-control border-0" placeholder="Buscar">
                            </form>
                        </div>

                        <div class="col-12 mb-3 mb-md-0 col-md-4 order-1 order-md-2 text-center">
                            <div class="site-logo">
                                <a href="@Url.Action("Index","Index")" class="js-logo-clone">GREY´S SHOES</a>
                            </div>
                        </div>

                        <div class="col-6 col-md-4 order-3 order-md-3 text-right">
                            <div class="site-top-icons">

                                <ul>
                                    <li><a href="#"><i class="icon fas fa-user"></i></a></li>
                                    <li><a href="#"><i class="icon fas fa-heart"></i></a></li>
                                    <li>
                                        <a href="cart.html" class="site-cart">
                                            <i class="icon fas fa-shopping-cart"></i>
                                            <span class="count">0</span>
                                        </a>
                                    </li>
                                    <li class="d-inline-block d-md-none ml-md-0"><a href="#" class="site-menu-toggle js-menu-toggle"><span class="icon-menu"></span></a></li>
                                </ul>

                            </div>
                        </div>

                    </div>

                </div>

            </div>

            <nav class="site-navigation text-right text-md-center" role="navigation">
                <div class="container">

                    <ul class="site-menu js-clone-nav d-none d-md-block">
                        <li class="has-children active">
                            <a href="index.html">Inicio</a>
                            <ul class="dropdown">
                                <li><a href="@Url.Action("Login","Login")">Iniciar Sesion</a></li>
                                <li><a href="@Url.Action("Registrar","Login")">Registrate</a></li>

                            </ul>

                        </li>
                        <li class="has-children">
                            <a href="#">Categorias</a>

                            <ul class="dropdown">
                                <li><a href="#">Dama</a></li>
                                <li><a href="#">Caballero</a></li>
                                <li><a href="#">Niño</a></li>
                                <li><a href="#">Niña</a></li>
                            </ul>

                        </li>
                        <li><a href="@Url.Action("Novedades","Novedades")">Novedades</a></li>
                        <li><a href="@Url.Action("Contact","Contacto")">Contacto</a></li>
                    </ul>

                </div>
            </nav>

        </header>

        @if (Model != null)
        {
            <table>
                <thead>
                    <tr>
                        <th>Model</th>
                        <th>BarCode</th>
                        <th>ProductPrice</th>
                        <th>ProductName</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td><img src="~/Images/@(item.BarCode).jpg" width="100" height="100" /></td>
                        <td>@item.BarCode</td>
                        <td>@item.ProductPrice</td>
                        <td>@item.ProductName</td>
                    </tr>
                    }
                </tbody>
            </table>
        }

        <footer class="site-footer border-top">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 mb-5 mb-lg-0">
                        <div class="row">
                            <div class="col-md-12">
                                <h3 class="footer-heading mb-4">Acceder a:</h3>
                            </div>
                            <div class="col-md-6 col-lg-4">
                                <ul class="list-unstyled">
                                    <li><a href="#">Caballero</a></li>
                                    <li><a href="#">Dama</a></li>
                                    <li><a href="#">Niño</a></li>
                                    <li><a href="#">Niña</a></li>
                                </ul>
                            </div>
                            <div class="col-md-6 col-lg-4">
                                <ul class="list-unstyled">
                                    <li><a href="@Url.Action("Contact","Contacto")">Contacto</a></li>
                                    <li><a href="@Url.Action("Novedades","Novedades")">Novedades</a></li>
                                    <li><a href="#">Envio</a></li>
                                    <li><a href="@Url.Action("Login","Login")">Iniciar Sesion</a></li>
                                    <li><a href="@Url.Action("Registrar","Login")">Registrarse</a></li>
                                </ul>
                            </div>

                        </div>
                    </div>
                    <div class="col-md-6 col-lg-3 mb-4 mb-lg-0">
                        <h3 class="footer-heading mb-4">Grey´s Shoes</h3>
                        <a href="#" class="block-6">
                            <img src="~/Images/hero_1.png" alt="Image placeholder" class="img-fluid rounded mb-4">
                            <h3 class="font-weight-light  mb-0">El mejor lugar, rapido y seguro para realizar tu compra</h3>
                        </a>
                    </div>
                    <div class="col-md-6 col-lg-3">
                        <div class="block-5 mb-5">
                            <h3 class="footer-heading mb-4">Informacion</h3>
                            <ul class="list-unstyled">
                                <li class="address">Dirección Calle Condesa #380, Fracc.La Condesa, Escobedo N.L.</li>
                                <li class="phone"><a href="tel://23923929210">(044)812292329 (Nuevo Leon) Grey´s Shoes Company.</a></li>
                                <li class="email">greysshoesc@gmail.com</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery-ui.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/owl.carousel.min.js"></script>
    <script src="~/Scripts/jquery.magnific-popup.min.js"></script>
    <script src="~/Scripts/aos.js"></script>

    <script src="~/Scripts/main.js"></script>

</body>
</html>
